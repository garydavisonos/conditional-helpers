{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "declaration": true, 
    "declarationDir": "./dist" 
  },
  "include": ["src/**/*"],
  "exclude": ["src/__tests__/"]
}
